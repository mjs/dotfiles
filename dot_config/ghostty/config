# window-decoration = false
unfocused-split-opacity = 0.8

auto-update = check

keybind = ctrl+alt+comma=previous_tab
keybind = ctrl+alt+period=next_tab
 
keybind = ctrl+alt+i=new_split:right
keybind = ctrl+alt+o=new_split:down

keybind = ctrl+alt+h=goto_split:left
keybind = ctrl+alt+l=goto_split:right
keybind = ctrl+alt+j=goto_split:bottom
keybind = ctrl+alt+k=goto_split:top
 
keybind = ctrl+alt+r=equalize_splits
keybind = ctrl+alt+enter=toggle_split_zoom

keybind = ctrl+alt+down=scroll_page_down
keybind = ctrl+alt+up=scroll_page_up
keybind = ctrl+shift+down=jump_to_prompt:1
keybind = ctrl+shift+up=jump_to_prompt:-1
